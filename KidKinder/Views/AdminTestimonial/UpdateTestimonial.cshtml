﻿@model KidKinder.Entities.Testimonial
@{
    ViewBag.Title = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <h5>Düşünceler Listesi</h5>
                <span>Düşünceler ile ilgili ekleme, silme, güncelle gibi işlemleri aşağıdan gerçekleştirebilirsiniz.</span>
            </div>
            <div class="card-block">
                <form method="post">
                    <input type="hidden" value="@Model.TestimonialId" name="TestimonialId" />
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Adı Soyadı</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="NameSurname" value="@Model.NameSurname" placeholder="Adı Soyadı">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Yorum</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Comment" value="@Model.Comment" placeholder="Yorumlar">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Görsel</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="ImageUrl" value="@Model.ImageUrl" placeholder="Referans Görseli">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-outline-primary col-12">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>