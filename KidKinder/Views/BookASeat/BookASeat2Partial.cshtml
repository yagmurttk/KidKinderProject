@model KidKinder.Entities.BookASeat

<div class="col-lg-5">
    <div class="card border-0">
        <div class="card-header bg-secondary text-center p-4">
            <h1 class="text-white m-0">Yer Ayırın</h1>
        </div>
        <div class="card-body rounded-bottom bg-primary p-5">
            <form method="post">
                <div class="form-group">
                    <input type="text"
                           class="form-control border-0 p-4"
                           name="Name"
                           placeholder="Adınız"
                           required="required" />
                </div>
                <div class="form-group">
                    <input type="email"
                           class="form-control border-0 p-4"
                           name="Email"
                           placeholder="Mail Adresiniz"
                           required="required" />
                </div>

                <div class="form-group">
                    @Html.DropDownListFor(x => x.BookASeatId, (SelectList)ViewBag.ClassRoom, "Sınıf Seçiniz", new { @class = "form-control" })

                </div>
                <div>
                    <button class="btn btn-secondary btn-block border-0 py-3"
                            type="submit">
                        Kayıt Ol
                    </button>
                </div>
            </form>

        </div>

    </div>
</div>
