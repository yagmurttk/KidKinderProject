@model List<KidKinder.Entities.Teacher>

@{
    ViewBag.Title = "AdminTeacherList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="pcoded-inner-content">
    <!-- Main-body start -->
    <div class="main-body">
        <div class="page-wrapper">
            <!-- Page-body start -->
            <div class="page-body">
                <div class="card">
                    <div class="card-header">
                        <h5>Öğretmen Listesi</h5>
                        <span>Öğretmenler ile ilgili işlemleri yapacağınız alandır.</span>
                        <div class="card-header-right">
                            <ul class="list-unstyled card-option">
                                <li><i class="fa fa fa-wrench open-card-option"></i></li>
                                <li><i class="fa fa-window-maximize full-card"></i></li>
                                <li><i class="fa fa-minus minimize-card"></i></li>
                                <li><i class="fa fa-refresh reload-card"></i></li>
                                <li><i class="fa fa-trash close-card"></i></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-block table-border-style">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Ad Soyad</th>
                                        <th>Branş</th>
                                        <th>Güncelle</th>
                                        <th>Sil</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.TeacherId</td>
                                            <td>@item.NameSurname</td>
                                            <td>@item.Branch.Name</td>
                                            <td><a href="/AdminTeacher/UpdateTeacher/@item.TeacherId" class="btn btn-outline-success">Güncelle</a></td>
                                            <td><a href="/AdminTeacher/DeleteTeacher/@item.TeacherId" class="btn btn-outline-danger">Sil</a></td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                            <a href="/AdminTeacher/CreateTeacher/" class="btn btn-outline-primary col-12">Öğretmen Girişi !</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>