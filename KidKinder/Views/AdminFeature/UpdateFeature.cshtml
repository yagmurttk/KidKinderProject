﻿@model KidKinder.Entities.Feature

@{
    ViewBag.Title = "UpdateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <h5>Öne Çıkan Alan Bilgileri</h5>
                <span>Öne Çıkan Alan ile ilgili ekleme, silme, güncelle gibi işlemleri aşağıdan gerçekleştirebilirsiniz.</span>
            </div>
            <div class="card-block">
                <form method="post">
                    <input type="hidden" value="@Model.FeatureId" name="FeatureId" />
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Başlık</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Header" value="@Model.Header">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Alt Başlık</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Title" value="@Model.Title">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Resim</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="ImageUrl" value="@Model.ImageUrl">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Açıklama</label>
                        <div class="col-sm-10">
                            <textarea rows="5" cols="5" class="form-control" name="Description" placeholder="Default textarea">@Model.Description</textarea>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-outline-primary">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>