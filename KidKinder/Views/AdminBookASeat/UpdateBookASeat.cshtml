﻿@model KidKinder.Entities.BookASeat

@{
    ViewBag.Title = "UpdateBookASeat";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <h5>Rezervasyon Bilgileri</h5>
                <span>Rezervasyon ile ilgili ekleme, silme, güncelle gibi işlemleri aşağıdan gerçekleştirebilirsiniz.</span>
            </div>
            <div class="card-block">
                <form method="post">
                    <input type="hidden" value="@Model.BookASeatId" name="BookASeatId" />
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Ad Soyad</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Name" value="@Model.Name" placeholder="Ad Soyad">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Email</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" value="@Model.Mail" name="Mail" placeholder="Email">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Sınıf</label>
                        <div class="col-sm-10">
                            @Html.DropDownListFor(x => x.ClassRoomId, (SelectList)ViewBag.values, "Sınıf Seçiniz", new { @class = "form-control" })
                        </div>
                    </div>
                    <button type="submit" class="btn btn-outline-primary">Rezervasyon Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>