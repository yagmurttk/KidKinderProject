@model KidKinder.Entities.Gallery

@{
    ViewBag.Title = "CreateImage";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <h5>Galeri Resim Ekleme</h5>
            </div>
            <div class="card-block">
                <form method="post">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Resim</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="ImageUrl" placeholder="Resim Yolu">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>


