@model List<KidKinder.Entities.About>

<div class="container-fluid py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-5">
                <img class="img-fluid rounded mb-5 mb-lg-0"
                     src="@Model[0].BigImageUrl"
                     alt="" />
            </div>
            <div class="col-lg-7">
                <p class="section-title pr-5">
                    <span class="pr-2">Hakkımızda Bilgi Edinin</span>
                </p>
                <h1 class="mb-4">Çocuklarınız İçin En İyi Okul</h1>
                @Html.Action("AboutListPartial", "About")

                @Html.Action("AboutList2", "About")
                <a href="" class="btn btn-primary mt-2 py-2 px-4">Daha Fazla Bilgi Edinin...</a>
            </div>
        </div>
    </div>
</div>
