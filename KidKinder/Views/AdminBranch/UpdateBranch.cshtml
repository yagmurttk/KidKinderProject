﻿@model KidKinder.Entities.Branch

@{
    ViewBag.Title = "UpdateBranch";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="card">
    <div class="card-header">
        <h5>Branş Güncelleme Sayfası</h5>
    </div>
    <div class="card-block">
        <form class="form-material" method="post">
            <input type="hidden" name="BranchId" value="@Model.BranchId" />
            <div class="form-group form-default">
                <input type="text" name="Name" value="@Model.Name" placeholder="Branş Adı" class="form-control">
            </div>

            <button type="submit" class="btn btn-outline-primary">Branşı Güncelle</button>
        </form>
    </div>
</div>